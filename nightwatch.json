{
    "src_folders": ["tests"],


    "output_folder": "reports",
    "page_objects_path": "page_object",
    "custom_commands_path": "custom_commands",
    "test_settings": {
        "default": {
            "launch_url": "http://test.rutebanken.org?mock",
            "selenium_port": 4444,
            "selenium_host": "selenium-hub",
            "silent": true,
            "globals": {
                "itinerarySearchTimeout": 21000,
                "waitForConditionTimeout": 10000
            },
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "reports/screenshots/"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        },
        "beta": {
            "launch_url": "https://www.dit.no?mock",
            "disable_colors": true
        },
        "local": {
            "launch_url": "http://localhost:8765/?mock"
        },
        "all_local": {
            "launch_url": "http://localhost:8080/?mock",
            "selenium_host": "localhost"
        },
        "phantomjs": {
            "desiredCapabilities": {
                "browserName": "phantomjs",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "phantomjs.binary.path": "/usr/bin/phantomjs"
            }
        }
    }
}
