{
    "src_folders": ["tests"],


    "output_folder": "reports",
    "page_objects_path": "page_object",
    "custom_commands_path": "custom_commands",
    "test_settings": {
        "default": {
            "launch_url": "http://test.rutebanken.org?mock",
            "selenium_port": 4444,
            "selenium_host": "selenium-hub",
            "silent": true,
            "globals": {
                "itinerarySearchTimeout": 21000,
                "waitForConditionTimeout": 10000
            },
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "reports/screenshots/"
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            },
            "skip_testcases_on_fail": false
        },
        "beta": {
            "launch_url": "https://www.dit.no?mock"
        },
        "local": {
            "launch_url": "http://localhost:8765/?mock"
        },
        "all_local": {
            "launch_url": "http://localhost:8080/?mock",
            "selenium_host": "localhost"
        },
        "mobile": {
            "desiredCapabilities": {
                "chromeOptions": {
                    "mobileEmulation": {
                        "deviceName": "Google Nexus 7"
                    },
                    "args": [
                        "window-size=800,1280"
                    ]
                }
            }
        },
        "tablet": {
            "desiredCapabilities": {
                "deviceName": "iPad,landscape",
                "chromeOptions": {
                    "mobileEmulation": {
                        "deviceMetrics": { "width": 1024, "height": 736, "pixelRatio": 3.0 }
                    },
                    "args": [
                        "window-size=1024,736"
                    ]
                }
            }
        },
        "phantomjs": {
            "desiredCapabilities": {
                "browserName": "phantomjs",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "phantomjs.binary.path": "/usr/bin/phantomjs"
            }
        }
    }
}
